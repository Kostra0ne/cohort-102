<form method="post" action="/hackers/edit/{{hacker._id}}" class="form">
    <label for="name">name</label>
    <input class="input" type="text" id="name" name="name" value="{{hacker.name}}">
    <label for="email">email</label>
    <input id="email" class="input" type="email" name="email" value="{{hacker.email}}">
    <label for="favLangage">favorite Langage</label>
    <select class="input" name="favLangage" id="favLangage">
        <option value="js">JS</option>
        <option value="php">PHP</option>
        <option value="python">PYTHON</option>
        <option value="java">JAVA</option>
    </select>
    <label for="isRegistered">is registered ?</label>
    {{#if hacker.isRegistered}}
    <input id="isRegistered" type="checkbox" name="isRegistered" checked>
    {{else}}
    <input id="isRegistered" type="checkbox" name="isRegistered">
    {{/if}}
    <button class="btn">ok !</button>
</form>